            </div>
            <div class="form-group" style="margin-left: 30px; margin-right: -50px">
                <i class="zmdi zmdi-lock"></i>
                <% if @minimum_password_length %>
                    <em>(パスワード確認)</em>
                <% end %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "textIn" %>
            </div>
            <div class="field" style="margin-left: 30px; margin-right: -50px">
              <i>(現在のパスワードを入力してください。)</i><br />
              <%= f.password_field :current_password, autocomplete: "off", class: "textIn" %>
            </div>            
            <div class="actions">
              <%= f.submit "変更" %>
            </div>
          </div>
        </div>
      <% end %>
