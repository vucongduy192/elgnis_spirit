          <div class="col-sm-6">
            <div class="form-group" style="margin-left: 30px">
              <i>アバター</i><br />
              <% if @user.avatar.present?%>
                <%= image_tag @user.avatar.url ,style: "width: 100%; height: 250px",
               class: "img-thumbnail"%>
              <% else %>
                 <%= image_tag @user.avatar_link, style: "width: 100%; height: 250px",
               class: "img-thumbnail"%>
              <% end %>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group" style="padding-top: 25px">
                <i class="zmdi zmdi-account material-icons-name"><b> ニックネーム</b></i> <br>
                <%= f.text_field :name, autofocus: true, class: "textIn" %>
            </div>
            <div class="form-group">
                <i class="zmdi zmdi-account material-icons-age"><b> 年齢</b></i> <br>
                <%= f.number_field :age, class: "textIn" %>
            </div>
            <div class="form-group">
                <i class="zmdi zmdi-account material-icons-age"><b> 大学</b></i> <br>
                <%= select_tag "user[school_id]",  options_from_collection_for_select(@school, "id", "name", @user.school_id), {:class => 'form-control'} %>
            </div>
          </div>
          <div class="col-sm-12" style="margin-top: 20px">
            <div class="form-group" style="margin-left: 30px; margin-right: -50px">
                <i class="zmdi zmdi-email"><b> メールアドレス</b></i> <br>
                <%= f.email_field :email, autocomplete: "email", class: "textIn" %>
            </div>
            <div class="form-group" style="margin-left: 30px; margin-right: -50px">
                <i class="zmdi zmdi-lock"></i>
                <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> 文字以上)</em>
                <% end %><br />
